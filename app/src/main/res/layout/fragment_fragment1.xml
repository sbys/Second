<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.myapp.Fragments.Fragment1"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"

    android:weightSum="1">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fca254"
        android:weightSum="1"
        android:id="@+id/mLayout">
        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="142dp"
            android:id="@+id/container1"></android.support.v4.view.ViewPager>
        <AutoCompleteTextView
            android:layout_width="295dp"
            android:layout_height="40dp"
            android:id="@+id/search"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/input_shape"
            android:paddingTop="2dp"
            ></AutoCompleteTextView>

        <ImageButton
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:id="@+id/scan"
            android:layout_marginTop="11dp"
            android:layout_gravity="right|top" />

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:id="@+id/points"
            android:orientation="horizontal"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="2dp"
            ></LinearLayout>


    </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1"
            android:background="@color/bace_fragment1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="#c8c4c4"
            android:id="@+id/text"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="  附近商家"
            android:gravity="center_vertical|left"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1.32"
            android:weightSum="1"
            android:id="@+id/li"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/text">
            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/listview"></ListView>
        </LinearLayout>

</RelativeLayout>


</LinearLayout>
